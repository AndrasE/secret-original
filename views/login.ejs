<%- include('partials/header') %>

<div class="jumbotron centered col-lg-4 col-sm-12">
  <h1>Login to Secrets <i class="fas fa-key"></i></h1>
  <br>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">

        <!-- Makes POST request to /login route -->
        <form action="/login" method="POST">
          <div class="form-group">
            <input type="email" class="form-control" name="username" placeholder="Email">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-dark btn-lg">Submit</button>
        </form>
        <br>
          <p class="lead">login with</p>
          <a class="btn btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
          Google
          </a>
          <a class="btn btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Facebook
          </a>
      </div>
    </div>
  </div>


<%- include('partials/footer') %>
